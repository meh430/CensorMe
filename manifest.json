{
    "name": "Censor Me",
    "version": "1.0",
    "description": "Censor the internet by blocking certain words!",
    "manifest_version": 2,
    "permissions": ["declarativeContent", "activeTab", "tabs", "http://*/*",
        "https://*/*", "storage", "contextMenus"],
    "background": {
        "scripts": ["startup.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["filter.js"]
    }],
    "page_action": {
        "default_popup": "popup.html"
    }
}